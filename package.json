{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:sourcemap": "cross-env NUXT_PUBLIC_SOURCEMAP=true nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "clean": "rm -rf dist .output .nuxt",
    "clean:build": "rm -rf dist .output",
    "sass-lint": "npx sass --verbose assets/scss/style.scss",
    "update-browserslist": "npx update-browserslist-db@latest",
    "sass-fix": "node scripts/fix-sass-deprecations.js",
    "sass-watch": "npx sass --watch --source-map assets/scss:assets/scss",
    "sass-optimize": "node scripts/optimize-sourcemaps.js",
    "bs": "browser-sync start --config bs-config.cjs",
    "bs:hot": "browser-sync start --config bs-config-hot.js",
    "dev:mobile": "npm run clean:build && concurrently \"npm run dev\" \"npm run bs\"",
    "dev:hot": "concurrently \"npm run dev\" \"gulp dev\"",
    "dev:hot-simple": "concurrently \"npm run dev\" \"npm run sass-watch\" \"npm run bs:hot\"",
    "sass:build": "gulp sass",
    "sass:build-min": "gulp sassMin",
    "scss:watch": "gulp",
    "build:subfolder": "cross-env NUXT_APP_BASE_URL=/txtengage/ nuxt build",
    "generate:subfolder": "cross-env NUXT_APP_BASE_URL=/txtengage/ nuxt generate",
    "generate:production": "cross-env NUXT_APP_BASE_URL=/txtengage/ nuxt generate",
    "dev:root": "cross-env NUXT_APP_BASE_URL=/ nuxt dev",
    "deploy:ftp": "node scripts/deploy-ftp.js",
    "deploy:git-ftp": "git ftp push --syncroot .vercel/output/static/txtengage/",
    "deploy:production": "npm run generate:production && npm run deploy:ftp",
    "deploy:staging": "npm run generate:subfolder && npm run deploy:ftp",
    "test:deploy": "node scripts/test-deploy.js"
  },
  "dependencies": {
    "@nuxt/image": "1.8.1",
    "@pinia/nuxt": "^0.7.0",
    "@popperjs/core": "^2.11.8",
    "@studio-freight/lenis": "^1.0.42",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.3",
    "gsap": "^3.13.0",
    "locomotive-scroll": "^4.1.4",
    "nuxt": "^3.14.1592",
    "pinia": "^2.2.7",
    "swiper": "^11.1.15",
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "basic-ftp": "^5.0.5",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^6.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "sass": "^1.77.8",
    "sass-embedded": "^1.88.0",
    "sass-loader": "^16.0.3",
    "swiper": "^11.1.15",
    "vue-owl-carousel": "^2.0.3"
  }
}
