{
  "name": "vodafone-animations-manager",
  "version": "1.0.0",
  "description": "Système de gestion d'animations pour Vodafone avec fullpage.js et contrôle du défilement",
  "main": "js/animation-manager.js",
  "scripts": {
    "dev": "live-server --port=8080",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass scss/main.scss:css/main.css --style=compressed",
    "build:js": "webpack --mode=production",
    "watch": "concurrently \"sass --watch scss:css\" \"npm run dev\""
  },
  "dependencies": {
    "fullpage.js": "^4.0.22",
    "gsap": "^3.13.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "sass": "^1.77.8",
    "live-server": "^1.2.2",
    "concurrently": "^9.1.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": ["fullpage", "animations", "vodafone", "gsap", "threejs"],
  "author": "Vodafone Team",
  "license": "MIT"
} 